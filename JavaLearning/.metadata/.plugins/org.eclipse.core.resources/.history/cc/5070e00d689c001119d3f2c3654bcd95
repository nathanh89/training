package com.visionarysoftwaresolutions.refillable;

import java.util.ArrayList;
import java.util.List;

public class OrderContainer {
	private int number;
	private BottledBeverage item;
	
	public OrderContainer(String desiredBeverage, int desiredQuantity) {
		setNumber(desiredQuantity);
		setItem(new BottledBeverage(desiredBeverage));
	}
	public BottledBeverage getItem() {
		return item;
	}
	
	public String getName(){
		return item.getName();
	}
	
	public void setItem(BottledBeverage item) {
		this.item = item;
	}
	public int getNumber() {
		return number;
	}
	public void setNumber(int number) {
		this.number = number;
	}
	
	public List<BottledBeverage> make(){
		List<BottledBeverage> result = new ArrayList<BottledBeverage>();
		for(int i=0; i< number; i++){
			result.add(item);
		}
		return result;
	}
}
