package com.visionarysoftwaresolutions.refillable;

import java.util.Objects;

/**
 *
 * @author nathan
 */
public class Bottle {
    private final String name;
    public double price;
    
    public Bottle(String beverageName){
        this.name = beverageName;
    }
    
    public void setPrice(double beveragePrice){
        this.price = beveragePrice;
    }

	public String getName(){
        return name;
    }
    
    public double getPrice(){
        return price;
    }
    
    @Override
    public boolean equals(Object another){
        if (!(another instanceof BottledBeverage)){
            return false;
        }
        BottledBeverage toCompare = (BottledBeverage) another;
        return getName().equalsIgnoreCase(toCompare.getName()) &&
               getPrice() == toCompare.getPrice();
    }

    @Override
    public int hashCode() {
        int hash = 3;
        hash = 59 * hash + Objects.hashCode(this.name);
        hash = 59 * hash + (int) (Double.doubleToLongBits(this.price) ^ (Double.doubleToLongBits(this.price) >>> 32));
        return hash;
    }
}
