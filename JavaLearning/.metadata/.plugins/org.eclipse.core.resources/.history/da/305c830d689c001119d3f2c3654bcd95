package com.visionarysoftwaresolutions.refillable;

import java.util.ArrayList;
import java.util.List;

/**
 *
 * @author nathan
 */
public class BottleManufacturer {
	private String name;
	
	public BottleManufacturer(String name) {
		setName(name);
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}
	
	public List<BottledBeverage> fill(Order newOrder) {
		List<BottledBeverage> result = new ArrayList<BottledBeverage>();
		for(OrderContainer container : newOrder){
			List<BottledBeverage> items = container.make();
			for(BottledBeverage anItem : items){
				result.add((BottledBeverage)anItem);
			}
		}
		return result;
	}
}